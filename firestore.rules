rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        "wwebitme@gmail.com"
      ];
    }
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
